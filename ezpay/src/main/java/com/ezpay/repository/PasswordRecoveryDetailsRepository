package com.EzPayApplication.repository;

import com.EzPayApplication.entity.PasswordRecoveryDetails;
import com.EzPayApplication.entity.Customer;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import java.util.Optional;

@Repository
public interface PasswordRecoveryDetailsRepository extends JpaRepository<PasswordRecoveryDetails, Long> {
    Optional<PasswordRecoveryDetails> findByToken(String token);
    Optional<PasswordRecoveryDetails> findByCustomer(Customer customer);
}
